<html>
 <body>
  <h1>Books</h1>
  
  <table>
    <thead>
      <tr>
        <tr>Title</tr>
        <tr>Body</tr>
        <th colspan= "3"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.title %>
        </td>
        <td>
          <%= book.body %>
        </td>
        <td>
          <%= link_to "Show", book_path(book.id) %>
          <%= link_to "Edit", edit_path(book.id) %>
          <%= link_to "Destroy", destroy_path(book.id) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <h2>New book</h2>
  <%= form_with model:@book, local:true do |f| %>
   <form class=new_book >
    <div class=field >
     <label for=book_title >Title</label>
     <%= f.text_field :title %>
    </div>
    <div class=field >
     <label for=book_body >Body</label>
     <%= f.text_area :body %>
    </div>
    <div class=actions >
     <%= f.submit 'Create Book' %>
    </div>
    <% end %>
  </form>
 </body>
</html>